{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": "off",
    "arrow-body-style": "off",
    "no-plusplus": "off",
    "no-console": "off",
    "prefer-arrow-callback": "off",
    "no-use-before-define": "off",
    "no-bitwise": "off",
    "no-param-reassign": "off",
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off",
    "no-unused-vars": "warn"
  }
}
